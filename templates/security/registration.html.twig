{% extends 'base.html.twig' %}

{% block body %}

    <h1>Inscription </h1>

    {{ form_start(form) }}

    {{ form_row(form.username, {'label' : 'Nom d\'utilisateur','attr' : {'placeholder' : 'Entrez votre nom d\'utilisateur'}}) }}
    {{ form_row(form.email, {'label' : 'Adresse email','attr' : {'placeholder' : 'Entrez votre adresse email'}}) }}
    {{ form_row(form.nom, {'label' : 'Nom','attr' : {'placeholder' : 'Entrez votre nom'}}) }}
    {{ form_row(form.prenom, {'label' : 'Prenom','attr' : {'placeholder' : 'Entrez votre prenom'}}) }}
    {{ form_row(form.password, {'label' : 'Mot de passe','attr' : {'placeholder' : 'Entrez votre mot de passe'}}) }}
    {{ form_row(form.confirm_password, {'label' : 'Confirmez votre mot de passe','attr' : {'placeholder' : 'Repetez votre mot de passe'}}) }}

    <button type="submit" class="btn btn-success">Inscription</button>

    {{ form_end(form) }}

{% endblock %}